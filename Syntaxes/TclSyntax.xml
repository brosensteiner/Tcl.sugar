				<capture number="2" name="tcl.s"/>
				<capture number="3" name="tcl.options.namespace"/>
			</zone>
			<zone>
				<expression>\b(namespace)(\s+)(ensemble)(?:(\s+)(create|configure|exists))?\b</expression>
				<capture number="1" name="tcl.command.function-call"/>
				<capture number="2" name="tcl.s"/>
				<capture number="3" name="tcl.options.namespace"/>
				<capture number="4" name="tcl.s"/>
				<capture number="5" name="tcl.options.namespace"/>
			</zone>
			<zone>
				<expression>\b(after)(\s+)(cancel|idle|info|\d+)\b</expression>
