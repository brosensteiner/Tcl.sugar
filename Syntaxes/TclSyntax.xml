        	    <capture number="2" name="tcl.s"/>
        	    <capture number="3" name="tcl.options.chan"/>
        	</zone>
			<zone>
				<expression>\b(namespace)(\s+)(children|code|current|delete|eval|exists|export|forget|import|inscope|origin|parent|path|qualifiers|tail|upvar|unknown|which)\b</expression>
