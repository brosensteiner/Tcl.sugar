			<!--namespaces-->
			<zone name="tcl.command.function-call">
					<starts-with>
				    <expression>(?:[\w?!\.]+)?(:{2,})(?=[\w?!\.])</expression>
				    <capture number="1" name="tcl.punctuation.namespace"/>
				</starts-with>
				<ends-with>
				    <expression>(?=[^\w?!:\.]|\s)</expression>
				</ends-with>
				<subzones>
					<zone>
						<expression>(:{2,})(?:[\w?!\.]*)</expression>
						<capture number="1" name="tcl.punctuation.namespace"/>
					</zone>
				</subzones>
			</zone>
						            
