				<capture number="5" name="tcl.s"/>
				<capture number="6" name="tcl.options.zlib"/>
				<capture number="7" name="tcl.options.zlib"/>
				<capture number="8" name="tcl.s"/>
				<capture number="9" name="tcl.options.zlib"/>
			</zone>
			
        	<zone name="tcl.command.function-call">
        		<expression>\b(add|checksum|finalize|fullflush|get|put|reset|zlib|tclsh|catch|regexp|regsub|after|error|lappend|platform|tcl_findLibrary|eval|lassign|platform::shell|tcl_startOfNextWord|apply|lmap|exec|lindex|tcl_startOfPreviousWord|exit|linsert|puts|tcl_wordBreakAfter|auto_execok|expr|list|pwd|tcl_wordBreakBefore|auto_import|fblocked|llength|re_syntax|tcltest|auto_load|fconfigure|load|read|tclvars|auto_mkindex|fcopy|lrange|refchan|tell|auto_mkindex_old|file|lrepeat|time|auto_qualify|lreplace|registry|tm|auto_reset|filename|lreverse|bgerror|flush|lsearch|unknown|binary|unload|lsort|Safe Base|format|mathfunc|update|cd|gets|mathop|seek|uplevel|chan|glob|memory|clock|msgcat|socket|close|history|namespace|vwait|concat|http|open|split|package|dde|incr|parray|subst|pid|encoding|interp|pkg::create|fileevent|scan|Tcl|eof|join|pkg_mkIndex|tcl_endOfWord|return|lset|global|variable|coroutine|yield|yieldto)(?=\s|\]|;)</expression>
        	</zone>
        	
        	<zone name="tcl.keyword.command.global.global-procedures">
        		<expression>\b(auto_execs|auto_index|auto_noexec|auto_noload|auto_path|unknown_pending|tclPkgUnknown|tclPkgSetup)\b</expression>
        	</zone>
        	
        	<zone name="tcl.keyword.global.global-variables">
        		<expression>\b(args|env|errorCode|errorInfo|tcl_library|tcl_libPath|tcl_patchLevel|tcl_pkgPath|tcl_platform|tcl_precision|tcl_rcFileName|tcl_rcRsrcName|tcl_traceCompile|tcl_traceExec|tcl_wordchars|tcl_nonwordchars|tcl_version|tcl_prompt1|tcl_prompt2|argc|argv|argv0|tcl_interactive|geometry|TCL_OK|TCL_ERROR|TCL_RETURN|TCL_BREAK|TCL_CONTINUE)\b</expression>
