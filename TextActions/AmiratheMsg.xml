<action-recipes>

<!--new amira theMsg error-->
    <snippet id="com.brosensteiner.actions.snippets.tcl.amira.theMsg.error" category="com.brosensteiner.actions.snippets.tcl/com.brosensteiner.tcl.amira.code.snippets">
    <title>message error</title>
        <text>theMsg error "${1:message}" "${2:btn0-text}" "${3:btn1-text}" "${4:btn2-text}" $0</text>
       <language-context>tcl</language-context>
        <text-trigger>Msge</text-trigger>
    </snippet>
    
<!--new amira theMsg warning-->
    <snippet id="com.brosensteiner.actions.snippets.tcl.amira.theMsg.warning" category="com.brosensteiner.actions.snippets.tcl/com.brosensteiner.tcl.amira.code.snippets">
    <title>message warning</title>
        <text>theMsg warning "${1:message}" "${2:btn0-text}" "${3:btn1-text}" "${4:btn2-text}" $0</text>
       <language-context>tcl</language-context>
        <text-trigger>Msgw</text-trigger>
    </snippet>
    
<!--new amira theMsg question-->
    <snippet id="com.brosensteiner.actions.snippets.tcl.amira.theMsg.question" category="com.brosensteiner.actions.snippets.tcl/com.brosensteiner.tcl.amira.code.snippets">
    <title>message question</title>
        <text>theMsg question "${1:message}" "${2:btn0-text}" "${3:btn1-text}" "${4:btn2-text}" $0</text>
       <language-context>tcl</language-context>
        <text-trigger>Msgq</text-trigger>
    </snippet>
    
<!--new amira theMsg filename-->
    <snippet id="com.brosensteiner.actions.snippets.tcl.amira.theMsg.filename" category="com.brosensteiner.actions.snippets.tcl/com.brosensteiner.tcl.amira.code.snippets">
    <title>message overwrite</title>
        <text>theMsg overwrite ${1:file} $0</text>
       <language-context>tcl</language-context>
        <text-trigger>Msgo</text-trigger>
    </snippet> 

</action-recipes>