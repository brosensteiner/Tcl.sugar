<!--switch-->	
	<snippet id="actions.snippets.tcl.switch" category="actions.snippets.tcl/tcl.code.snippets">
		<title>new switch</title>
		<text>switch ${1:\{${2:pattern}\}} ${3:\{
	${4:body}
\}}
$0</text>
		<syntax-context>source.Tcl, source.Tcl *</syntax-context>
		<text-trigger>nswitch</text-trigger>
	</snippet>

