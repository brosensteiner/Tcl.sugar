<action-recipes>

<!--for loop-->
    <snippet id="actions.snippets.tcl.for" category="actions.snippets.tcl/tcl.code.snippets">
        <title>new for loop</title>
        <text>for \{ ${1:set i 0} \} \{ ${2:test} \} \{ ${3:incr i} \} \{
	${4:body}
\}
$0</text>
        <syntax-context>source.Tcl, source.Tcl *</syntax-context>
        <text-trigger>nfor</text-trigger>
    </snippet>
    
<!--for loop one line-->
    <snippet id="actions.snippets.tcl.for-oneline" category="actions.snippets.tcl/tcl.code.snippets">
        <title>new for loop at one line</title>
        <text>for \{ ${1:set i 0} \} \{ ${2:test} \} \{ ${3:incr i} \} \{ ${4:body} \}$0</text>
        <syntax-context>source.Tcl, source.Tcl *</syntax-context>
        <text-trigger>nfor1</text-trigger>
    </snippet>
	
    
<!--if-->
	<snippet id="actions.snippets.tcl.if" category="actions.snippets.tcl/tcl.code.snippets">
	        <title>new if</title>
	        <text>if \{ ${1:condition} \} \{
	${2:body}
\}
$0</text>
	        <syntax-context>source.Tcl, source.Tcl *</syntax-context>
	        <text-trigger>nif</text-trigger>
	</snippet>
	
<!--if one line-->
	<snippet id="actions.snippets.tcl.if-oneline" category="actions.snippets.tcl/tcl.code.snippets">
	        <title>new if at one line</title>
	        <text>if \{ ${1:condition} \} \{ ${2:body} \}$0</text>
	        <syntax-context>source.Tcl, source.Tcl *</syntax-context>
	        <text-trigger>nif1</text-trigger>
	</snippet>
	 
<!--if else-->
	<snippet id="actions.snippets.tcl.ifelse" category="actions.snippets.tcl/tcl.code.snippets">
		<title>new if else</title>
			<text>if \{ ${1:condition} \} \{
	 	${2:body}
	 \} else \{
	 	${3:body}
\}
$0</text>
			<syntax-context>source.Tcl, source.Tcl *</syntax-context>
	 	        <text-trigger>nifelse</text-trigger>
			</snippet>

