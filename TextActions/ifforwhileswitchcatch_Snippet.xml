<!--catch-->
	<snippet id="actions.snippets.tcl.catch" category="actions.snippets.tcl/tcl.code.snippets">
		<title>new catch</title>
		<text>catch \{
	${1:body}
\} ${2:resultVar}
$0</text>
		<syntax-context>source.Tcl, source.Tcl *</syntax-context>
		<text-trigger>ncatch</text-trigger>
	</snippet>

	<snippet id="actions.snippets.tcl.catch-oneline" category="actions.snippets.tcl/tcl.code.snippets">
			<title>new catch at one line</title>
			<text>catch \{ ${1:body} \} ${2:resultVar}$0</text>
			<syntax-context>source.Tcl, source.Tcl *</syntax-context>
			<text-trigger>ncatch1</text-trigger>
		</snippet>
		
</action-recipes>

