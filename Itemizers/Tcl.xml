<itemizer>

	<recipe name="tcl.keyword.command.function">
		<class>ESBaseClass</class>
		<selector>tcl.function:has-child(name:capture(name))</selector>
	</recipe>

	<recipe name="tcl.container.if-block">
		<class>ESJSControlBlockItem</class>
		<start-selector>Tcl tcl.keyword[text='if']:capture(itemizer-firstused) + open-brace:capture(open-parameters)</start-selector>
		<end-selector>Tcl close-brace:capture(close-parameters)</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<recipe name="tcl.container.elseif-block">
		<class>ESJSControlBlockItem</class>
		<start-selector>Tcl tcl.keyword[text='elseif']:capture(itemizer-firstused) + open-brace</start-selector>
		<end-selector>Tcl close-brace</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>

	<recipe name="tcl.container.else-block">
		<class>ESJSControlBlockItem</class>
		<start-selector>Tcl tcl.keyword[text='else']:capture(itemizer-firstused) + open-brace</start-selector>
		<end-selector>Tcl close-brace</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<recipe name="tcl.container.foreach">
		<class>ESJSControlBlockItem</class>
		<selector>Tcl tcl.keyword[text='foreach']:capture(name)</selector>
	</recipe>
	
	<recipe name="tcl.container.while">
		<class>ESJSControlBlockItem</class>
		<selector>Tcl tcl.keyword[text='while']:capture(name)</selector>
	</recipe>
	
	<recipe name="tcl.container.switch">
		<class>ESJSControlBlockItem</class>
		<selector>Tcl tcl.keyword[text='switch']:capture(name)</selector>
	</recipe>
	
	<recipe name="tcl.container.for">
		<class>ESJSControlBlockItem</class>
		<selector>Tcl tcl.keyword[text='for']:capture(name)</selector>
	</recipe>
	
	<!--since Tcl uses "{" ans "}" virtually everywhere (EIAS - everything is a string in Tcl) there is no chance to get a nice code folding like in ruby.sugar for example, but with this itemizer it is not bad:-->
	<recipe name="tcl.container.balanced-braces">
		<class>ESCodeBlockItem</class>
		<start-selector>Tcl open-brace</start-selector>
		<end-selector>Tcl close-brace</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<recipe name="tcl.comment">
	    <class>ESCommentItem</class>
	    <selector>tcl.comment</selector>
	    <subrecipes>
	    	<recipe name="tcl.comment.link">
	    		<class>ESJSMarkupLink</class>
	    		<selector>tcl.comment markup.link</selector>
	    	</recipe>
	    </subrecipes>
	</recipe>
	

</itemizer>



