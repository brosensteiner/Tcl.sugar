<itemizer>

	<recipe name="tcl.keyword.command.function">
		<class>ESBaseClass</class>
		<selector>tcl.function:has-child(name:capture(name))</selector>
	</recipe>
	
	<recipe name="tcl.keyword.command.function.anonymous">
		<class>ESJSAnonymousFunctionItem</class>
		<selector>tcl.function-call[text='apply']:capture(itemizer-firstused)</selector>
	</recipe>
	
	<recipe name="tcl.keyword.command.class">
		<class>ESCodeClassItem</class>
		<selector>tcl.class:has-child(name:capture(name))</selector>
	</recipe>
	
	<recipe name="tcl.control-container-start">
		<class>ESJSControlBlockItem</class>
		<selector>tcl.container.control-if-argument:capture(name)</selector>
	</recipe>

	<recipe name="tcl.control-start">
		<class>ESJSControlBlockItem</class>
		<selector>tcl.keyword.control.start:capture(itemizer-firstused) + s:capture(open-parameters) + *:capture(close-parameters)</selector>
	</recipe>
	
	<recipe name="tcl.else">
		<class>ESJSControlBlockItem</class>
		<selector>tcl.keyword.control[text="else"]:capture(name)</selector>
	</recipe>
	
	<!--since tcl uses "{" and "}" virtually everywhere for everything and definitions of functions and the like have so much - but nice :) -  syntactic sugar (EIAS - everything is a string in tcl) there is no chance to get a perfect code folding and inspector-view like in ruby.sugar or lua.sugar for example, but with this itemizer it is not so bad:-->
	<recipe name="tcl.container.balanced-braces">
		<class>ESCodeBlockItem</class>
		<start-selector>tcl open-brace</start-selector>
		<end-selector>tcl close-brace</end-selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	
	<recipe name="tcl.comment">
	    <class>ESCommentItem</class>
	    <selector>tcl.comment</selector>
	    <subrecipes>
	    	<recipe name="tcl.comment.link">
	    		<class>ESJSMarkupLink</class>
	    		<selector>tcl.comment markup.link</selector>
	    	</recipe>
	    </subrecipes>
	</recipe>
	

</itemizer>



