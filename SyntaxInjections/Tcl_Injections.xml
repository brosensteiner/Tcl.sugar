<injections>

    <injection name="injection.amira" selector="language-root.tcl regex" action="insert-before-children">
	    <include syntax="name.elliottcable.Espresso.Syntax.Expression.Regex" />
    </injection>
    
    <library>
    
        <collection name="Balanced">
        				
        	<zone name="tcl.container.balanced-braces">
        	    <starts-with>
        	        <expression>\{</expression>
        	        <capture number="0" name="tcl.punctuation.open-brace"/>
        	    </starts-with>
        	    <ends-with>
        	        <expression>\}</expression>
        	        <capture number="0" name="tcl.punctuation.close-brace"/>
        	    </ends-with>
        	    <subzones>
        	    	<include collection="Balanced" />
        	    	<include syntax="language-root.tcl" />
        	    </subzones>
        	    <cut-off>
        	        <expression></expression>
        	    </cut-off>
        	</zone>			
        
        </collection>
        
    </library>
    
</injections>